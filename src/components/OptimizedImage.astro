---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
}

const { src, alt, width, height, class: className = '', loading = 'lazy' } = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  decoding="async"
  class={`transition-opacity duration-300 ${className}`}
/>

<style>
  img {
    max-width: 100%;
    height: auto;
  }
</style>
