---
import BaseLayout from '@layouts/BaseLayout.astro';
import Breadcrumb from '@components/Breadcrumb.astro';
import GoogleMap from '@components/GoogleMap.astro';
import FAQ from '@components/FAQ.astro';

// Breadcrumb items
const breadcrumbItems = [
  { name: 'Início', url: '/' },
  { name: 'Contato', url: '/contato' }
];

// Contact information
const contactInfo = [
  {
    icon: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
    label: 'Email',
    value: 'contato@eomaridodealuguel.com.br',
    href: 'mailto:contato@eomaridodealuguel.com.br'
  },
  {
    icon: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
    label: 'WhatsApp',
    value: '(61) 98405-7851',
    href: 'https://wa.me/5561984057851'
  },
  {
    icon: 'M17.657 16.657L13.414 20.9a2 2 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z',
    label: 'Atendimento',
    value: 'Águas Claras, Brasília - DF',
    href: '#'
  }
];

// Organization Schema with contact
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "EO Marido de Aluguel",
  "url": "https://eomaridodealuguel.com.br",
  "logo": "https://eomaridodealuguel.com.br/eomaridodealuguel.png",
  "email": "contato@eomaridodealuguel.com.br",
  "telephone": "+55-61-98405-7851",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Águas Claras",
    "addressLocality": "Brasília",
    "addressRegion": "DF",
    "addressCountry": "BR"
  },
  "sameAs": [
    "https://www.facebook.com/eomaridodealuguel",
    "https://www.instagram.com/eomaridodealuguel",
    "https://www.whatsapp.com/eomaridodealuguel"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "Customer Service",
    "telephone": "+55-61-98405-7851",
    "email": "contato@eomaridodealuguel.com.br",
    "areaServed": "Águas Claras, Brasília - DF",
    "availableLanguage": ["pt-BR"]
  }
};
---

<BaseLayout title="Contato - Marido de Aluguel em Águas Claras | EO" description="Entre em contato com Marido de Aluguel em Águas Claras para solicitar: serviços elétricos, hidráulicos, desentupimento, montagem e reparos. WhatsApp 24h!">
  {/* Organization Schema */}
  <script type="application/ld+json">
    {JSON.stringify(organizationSchema)}
  </script>

  {/* Hero Section */}
  <section class="py-20 md:py-32 bg-gradient-to-br from-blue-50 to-indigo-50">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        Vamos Conversar
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto">
        Estamos prontos para resolver seus problemas residenciais com rapidez e qualidade
      </p>
    </div>
  </section>

  {/* Breadcrumb */}
  <Breadcrumb items={breadcrumbItems} />

  {/* Contact Information */}
  <section class="py-12 md:py-16 lg:py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        {contactInfo.map((info) => (
          <div class="bg-white p-8 rounded-lg shadow-md text-center hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={info.icon} />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-3">{info.label}</h3>
            {info.href !== '#' ? (
              <a href={info.href} class="text-primary font-semibold hover:text-blue-600 transition-colors">
                {info.value}
              </a>
            ) : (
              <p class="text-gray-600">{info.value}</p>
            )}
          </div>
        ))}
      </div>

      {/* Social Links */}
      <div class="text-center mb-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Nos siga nas redes sociais</h3>
        <div class="flex gap-4 justify-center">
          <a href="https://www.facebook.com/seu-facebook" class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white hover:bg-blue-600 transition-colors" aria-label="Facebook">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
            </svg>
          </a>
          <a href="https://www.instagram.com/seu-instagram" class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white hover:bg-blue-600 transition-colors" aria-label="Instagram">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.466.182-.8.398-1.15.748-.35.35-.566.684-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.684.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.684.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" />
            </svg>
          </a>
          <a href="https://www.linkedin.com/company/seu-linkedin" class="w-12 h-12 bg-primary rounded-full flex items-center justify-center text-white hover:bg-blue-600 transition-colors" aria-label="LinkedIn">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Contact Form */}
  <section id="contact-form" class="py-12 md:py-16 lg:py-20 bg-white">
    <div class="container mx-auto px-4 max-w-2xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Solicite Seu Orçamento
        </h2>
        <p class="text-lg text-gray-600">
          Preencha o formulário abaixo e nossa equipe entrará em contato em até 2 horas
        </p>
      </div>

      <form class="bg-gray-50 p-8 rounded-lg shadow-md" method="POST" action="/api/contact">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          {/* Name */}
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-900 mb-2">
              Nome Completo *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
              placeholder="Seu nome"
            />
          </div>

          {/* Email */}
          <div>
            <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">
              Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
              placeholder="seu@email.com"
            />
          </div>

          {/* Phone */}
          <div>
            <label for="phone" class="block text-sm font-semibold text-gray-900 mb-2">
              Telefone *
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
              placeholder="(11) XXXX-XXXX"
            />
          </div>

          {/* Company */}
          <div>
            <label for="company" class="block text-sm font-semibold text-gray-900 mb-2">
              Empresa *
            </label>
            <input
              type="text"
              id="company"
              name="company"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
              placeholder="Nome da sua empresa"
            />
          </div>
        </div>

        {/* Service Interest */}
        <div class="mb-6">
          <label for="service" class="block text-sm font-semibold text-gray-900 mb-2">
            Qual serviço você tem interesse? *
          </label>
          <select
            id="service"
            name="service"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
          >
            <option value="">Selecione um serviço</option>
            <option value="eletricista">Eletricista</option>
            <option value="encanador">Encanador</option>
            <option value="desentupidor">Desentupimento</option>
            <option value="pequenos-reparos">Pequenos Reparos</option>
            <option value="manutencao">Manutenção Preventiva</option>
            <option value="emergencia">Atendimento de Emergência</option>
            <option value="outro">Outro</option>
          </select>
        </div>

        {/* Message */}
        <div class="mb-6">
          <label for="message" class="block text-sm font-semibold text-gray-900 mb-2">
            Descreva o problema
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
            placeholder="Descreva o problema que precisa resolver..."
          ></textarea>
        </div>

        {/* Privacy */}
        <div class="mb-6">
          <label class="flex items-start">
            <input
              type="checkbox"
              name="privacy"
              required
              class="w-4 h-4 mt-1 text-primary rounded focus:ring-2 focus:ring-primary cursor-pointer"
            />
            <span class="ml-3 text-sm text-gray-600">
              Eu concordo com a <a href="#" class="text-primary hover:text-blue-600 font-semibold">política de privacidade</a> e autorizo o contato via WhatsApp ou email.
            </span>
          </label>
        </div>

        {/* Submit Button */}
        <button
          type="submit"
          class="w-full px-8 py-4 bg-primary text-white font-semibold rounded-lg hover:bg-blue-600 transition-colors shadow-lg hover:shadow-xl active:scale-95"
        >
          Enviar Solicitação
        </button>

        <p class="text-center text-sm text-gray-600 mt-4">
          * Campos obrigatórios
        </p>
      </form>
    </div>
  </section>

  {/* Google Map Section */}
  <GoogleMap />

  {/* FAQ */}
  <FAQ />
</BaseLayout>
